{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": [ "node_modules/@types" ]
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "node_modules/@types",
        "**/*.spec.ts"
    ]
}